<ClickableTextFieldRoundChild@MDRelativeLayout>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        mode: "round"
        normal_color: .8, .8, .8, 1
        color_active: .9, .9, .9, 1
        -height: "42dp"
        disabled: True

    MDIconButton:
        id: edit_btn
        icon: "pencil-lock"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0

    MDIconButton:
        id: save_btn
        icon: "content-save-edit"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width - dp(32), 0
        disabled: True

<Child>:
    name: "child"

    MDBottomNavigation:
        panel_color: "#2e8b2e"

        MDBottomNavigationItem:
            name: "back"
            text: "Pwr√≥t"
            font_name: "fonts/static/OpenSans/OpenSans-Bold.ttf"
            icon: "arrow-u-left-top-bold"
            on_tab_release:
                app.root.current = "children"
                root.manager.transition.direction = "right"

            FitImage:
                source: "images/bg.png"

            MDBoxLayout:
                orientation: "vertical"
                spacing: "12dp"
                size_hint_x: .6
                pos_hint: {"center_x": .5, "center_y": .8}
                adaptive_height: True

                ClickableTextFieldRoundChild:
                    id: edit_name

                ClickableTextFieldRoundChild:
                    id: edit_date

            MDBoxLayout:
                id: child_layout
                spacing: "12dp"
                padding: 20