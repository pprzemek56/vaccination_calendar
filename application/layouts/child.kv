<ClickableTextFieldRoundChild@MDRelativeLayout>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        mode: "round"
        normal_color: .8, .8, .8, 1
        color_active: .9, .9, .9, 1
        -height: "42dp"
        disabled: True

    MDIconButton:
        id: edit_btn
        icon: "pencil-lock"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0

    MDIconButton:
        id: save_btn
        icon: "content-save-edit"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width - dp(32), 0
        disabled: True

<Child>:
    name: "child"

    MDBottomNavigation:
        panel_color: "#2e8b2e"

        MDBottomNavigationItem:
            name: "back"
            text: "Pwrót"
            font_name: "fonts/static/OpenSans/OpenSans-Bold.ttf"
            icon: "arrow-u-left-top-bold"
            on_tab_release:
                app.root.current = "children"
                root.manager.transition.direction = "right"

            FitImage:
                source: "images/bg.png"

            MDBoxLayout:
                orientation: "vertical"
                spacing: "12dp"
                size_hint_x: .6
                pos_hint: {"center_x": .5, "center_y": .9}
                adaptive_height: True

                ClickableTextFieldRoundChild:
                    id: edit_name

                ClickableTextFieldRoundChild:
                    id: edit_date

            BoxLayout:
                orientation: "vertical"
                size_hint: .95, .7
                pos_hint: {"center_x": .5}

                canvas:
                    Color:
                        rgba: (0, 0, 0, 1)
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15]
                    Color:
                        rgba: (255/255, 255/255, 255/255, 1)
                    RoundedRectangle:
                        pos: self.x + 1.5, self.y + 1.5
                        size: self.width - 3, self.height - 3
                        radius: [15]

                MDScrollView:
                    do_scroll_x: True
                    do_scroll_y: True

                    GridLayout:
                        id: box_scroll_view
                        cols: 5
                        width: 800
                        height: 2200
                        size_hint: None, None
                        spacing: 20
                        padding: 20

                        MDLabel:
                            text: "Szczepienie przeciw"
                            font_name: "fonts/static/OpenSans/OpenSans-Bold.ttf"

                        MDLabel:
                            text: "Początek"
                            font_name: "fonts/static/OpenSans/OpenSans-Bold.ttf"

                        MDLabel:
                            text: "Koniec"
                            font_name: "fonts/static/OpenSans/OpenSans-Bold.ttf"

                        MDLabel:
                            text: "Dawka"
                            font_name: "fonts/static/OpenSans/OpenSans-Bold.ttf"

                        MDLabel:
                            text: "Czy odbyte"
                            font_name: "fonts/static/OpenSans/OpenSans-Bold.ttf"

                        # MDLabel:
                            # text: "Powiadomienia"
