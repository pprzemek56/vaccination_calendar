<Menu>:
    name: "menu"

    FitImage:
        source: "images/bg.png"

    MDBoxLayout:
        orientation: "vertical"
        reverse_order:True
        spacing: "24dp"
        padding: 20


        MDLabel:
            text: "Szczepienia +"
            font_size: 32
            halign: 'center'
            valign: 'middle'
            theme_text_color: 'Custom'
            text_color: (1, 1, 1, 1)
