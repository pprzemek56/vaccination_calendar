<CarouselItem>:
    cols: 2
    rows: 6
    pos_hint: {"center_x": .5, "center_y": .4}
    size_hint: .9, .5
    padding: 10

    canvas:
        Color:
            rgba: (0, 0, 0, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]
        Color:
            rgba: (255/255, 255/255, 255/255, 1)
        RoundedRectangle:
            pos: self.x + 1.5, self.y + 1.5
            size: self.width - 3, self.height - 3
            radius: [15]


<Day>:
    name: "day"

    MDBottomNavigation:
        panel_color: "#2e8b2e"

        MDBottomNavigationItem:
            name: "back"
            text: "Pwr√≥t"
            font_name: "fonts/static/OpenSans/OpenSans-Bold.ttf"
            icon: "arrow-u-left-top-bold"
            on_tab_release:
                app.root.current = "calendar"
                root.manager.transition.direction = "right"

            FitImage:
                source: "images/bg.png"

            MDLabel:
                text: "Szczepienia +"
                font_size: 32
                halign: 'center'
                valign: 'bottom'
                theme_text_color: 'Custom'
                text_color: (1, 1, 1, 1)
                font_name: "fonts/static/OpenSans/OpenSans-ExtraBoldItalic.ttf"
                pos_hint: {"center_y": .825}

            MDLabel:
                id: current_date
                font_size: 32
                halign: 'center'
                valign: 'bottom'
                theme_text_color: 'Custom'
                text_color: (1, 1, 1, 1)
                font_name: "fonts/static/OpenSans/OpenSans-ExtraBoldItalic.ttf"
                pos_hint: {"center_y": .725}

            MDCarousel:
                id: carousel


