<Calendar>:
    name: "calendar"

    MDBottomNavigation:
        panel_color: "#2e8b2e"

        MDBottomNavigationItem:
            name: "menu"
            text: "Menu"
            font_name: "fonts/static/OpenSans/OpenSans-Bold.ttf"
            icon: "home"
            on_tab_release:
                app.root.current = "menu"
                root.manager.transition.direction = "right"

            FitImage:
                source: "images/bg.png"

            BoxLayout:
                orientation: "vertical"

                GridLayout:
                    cols: 3
                    rows: 2
                    halign: "center"
                    valign: "middle"
                    size_hint: 1, .15

                    MDIconButton:
                        icon: "chevron-left"
                        size_hint: .333, .333
                        on_press: root.change_year("left")

                    MDFlatButton:
                        id: year_label
                        size_hint: .333, .333
                        font_size: 32
                        font_name: "fonts/static/OpenSans/OpenSans-Bold.ttf"
                        on_press: root.set_date()


                    MDIconButton:
                        icon: "chevron-right"
                        size_hint: .333, .333
                        on_press: root.change_year("right")

                    MDIconButton:
                        icon: "chevron-left"
                        size_hint: .333, .333
                        on_press: root.change_month("left")

                    MDFlatButton:
                        id: month_label
                        size_hint: .333, .333
                        font_size: 32
                        font_name: "fonts/static/OpenSans/OpenSans-Bold.ttf"
                        on_press: root.set_date()

                    MDIconButton:
                        icon: "chevron-right"
                        size_hint: .333, .333
                        on_press: root.change_month("right")

                GridLayout:
                    id: weekdays_layout
                    cols: 7
                    size_hint: .9, .1
                    pos_hint: {"center_x": .5, "center_y": .5}
                    spacing: 10

                    # canvas:
                        # Color:
                            # rgba: app.theme_cls.primary_color
                        # Rectangle:
                            # pos: self.pos
                            # size: self.size

                GridLayout:
                    id: calendar_layout
                    cols: 7
                    size_hint: .9, .5
                    pos_hint: {"center_x": .5, "center_y": .5}
                    spacing: 10

                    # canvas:
                        # Color:
                            # rgba: app.theme_cls.primary_color
                        # Rectangle:
                            # pos: self.pos
                            # size: self.size

